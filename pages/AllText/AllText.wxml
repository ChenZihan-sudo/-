<view>全部法律文本</view>
<button wx:for="{{Tags}}" wx:key="id" bindtap="Tags" class="{{item.id}}" data-index="{{item.TagName}}">
{{item.TagName}}
</button>
<!-- 获取文本列表 -->
<view wx:for="{{TextList}}" wx:key="Time">
    <!-- 导航至细节展示并传值 -->
    <navigator url="/pages/details/details?Link={{item.Path}}&Name={{item.Name}}&Author={{item.Author}}&Time={{item.DisplayTime}}&Size={{item.Size}}">
        <view>作者:{{item.Author}}</view>
        <view>名称:{{item.Name}}</view>
        <view>时间:{{item.DisplayTime}}</view>
        <view>路径:{{item.Path}}</view>
        <view>分类:{{item.Sort}}</view>
    </navigator>
</view>